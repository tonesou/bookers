<h1>Editing Book</h1>
<%= form_with model: @book, url: update_book_path(@book),metod: :patch do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>
	
  <p>Body</p>
  <%= f.text_area :body %>
	
 <br><%= f.submit 'Update Book' %></br>
 <%=link_to 'show',book_path, class:'back-btn' %>
 <%=link_to 'back',books_path, class:'back-btn' %>
<% end %>