<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %> errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
<%= form_with model: @book, url: update_book_path(@book),metod: :patch do |f| %>
  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

 <br><%= f.submit 'Update Book' %></br>
 <p>
 <%=link_to 'Show',book_path, class:'back-btn' %> |
 <%=link_to 'Back',books_path, class:'back-btn' %>
 </p>
<% end %>